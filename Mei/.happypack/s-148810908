import * as ald from '../util/ald';
import { MessageBox } from 'mint-ui';

export default {
  getAipRecommend: function getAipRecommend(options, cb) {
    ald.http.fetch(options).then(function (res) {
      if (res.responseCode === '000000') {
        cb(res.data);
      } else {
        MessageBox.alert({
          title: '温馨提示',
          message: res.responseMsg
        });
      }
    });
  },
  getCreateOrder: function getCreateOrder(options, cb) {
    ald.http.fetch(options).then(function (res) {
      if (res.responseCode === '000000') {
        cb(res.data);
      } else {
        MessageBox.alert({
          title: '温馨提示',
          message: res.responseMsg
        });
      }
    });
  },
  queryDrawHistory: function queryDrawHistory(options, cb) {
    ald.http.fetch(options).then(function (res) {
      if (res.responseCode === '000000') {
        cb(res.data);
      } else {
        MessageBox.alert({
          title: '温馨提示',
          message: res.responseMsg
        });
      }
    });
  },
  createOrder: function createOrder(options, cb) {
    ald.http.fetch(options).then(function (res) {
      if (res.responseCode === '000000') {
        cb(res.data);
      } else {
        MessageBox.alert({
          title: '温馨提示',
          message: res.responseMsg
        });
      }
    });
  },
  queryOrderStatus: function queryOrderStatus(options, cb) {
    ald.http.fetch(options).then(function (res) {
      cb(res);
    });
  },
  queryIntRate: function queryIntRate(options, cb) {
    ald.http.fetch(options).then(function (res) {
      if (res.responseCode === '000000') {
        cb(res.data);
      } else {
        MessageBox.alert({
          title: '温馨提示',
          message: res.responseMsg
        });
      }
    });
  },
  getSystemDateTime: function getSystemDateTime(options, cb) {
    ald.http.fetch(options).then(function (res) {
      if (res.code === '000000') {
        cb(new Date(res.data.current_date_time).getHours(), res.data.current_date_time);
      } else {
        MessageBox.alert({
          title: '温馨提示',
          message: res.msg
        });
      }
    });
  },
  dhtQueryCardList: function dhtQueryCardList(options, cb) {
    ald.http.fetch(options).then(function (res) {
      if (res.responseCode === '000000') {
        cb(res.data);
      } else {
        MessageBox.alert({
          title: '温馨提示',
          message: res.responseMsg
        });
      }
    });
  }
};